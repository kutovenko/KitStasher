<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPassive"></solid>
            <corners android:radius="4dip" />
        </shape>
    </item>
    <!-- Body -->
    <item
        android:left="2dip"
        android:top="2dp"
        android:right="2dp">
        <shape>
            <solid android:color="@color/colorItem"></solid>
        </shape>
    </item>
</layer-list>