<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Card header Theme -->
    <style name="AppTheme.LittleHeader" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- TextEdit Fields -->
    <style name="MyTextEdit" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <!-- AutoComplete Fields Theme -->
    <style name="MyAutoComplete" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <!-- TextViews Text Theme -->
    <style name="TextTheme" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <!-- CheckBox Text Theme -->
    <style name="CheckboxTheme" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
    </style>
</resources>
