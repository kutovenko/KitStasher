<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.ButtonAct" parent="Widget.AppCompat.Button.Colored">
        <!--<item name="colorButtonNormal">@color/act</item>-->
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@drawable/button</item>


    </style>

    <style name="AppTheme.ButtonConfirm" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/confirm</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="AppTheme.ButtonDeny" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/deny</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="AppTheme.LittleHeader" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
