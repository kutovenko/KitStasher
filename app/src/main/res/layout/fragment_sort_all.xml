<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linLayoutViewAllContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llSortToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/colorHighlight"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/linLayoutSortDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="@string/date" />

            <ImageView
                android:id="@+id/ivSortDate"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_keyboard_arrow_down_white_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayoutSortBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="end|center"
                android:text="@string/Brand" />

            <ImageView
                android:id="@+id/ivSortBrand"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayoutSortKitname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="right|center"
                android:text="@string/Kit_name" />

            <ImageView
                android:id="@+id/ivSortKitname"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayoutSortScale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="right|center"
                android:text="@string/Scale" />

            <ImageView
                android:id="@+id/ivSortScale"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp" />


        </LinearLayout>

        <ImageButton
            android:id="@+id/ibtnFilter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/button"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            app:srcCompat="@drawable/ic_filter_list_black_24dp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvKits"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"

        android:divider="@color/colorPrimary"
        android:dividerHeight="1px"

        android:layout_weight="0.25" />

</LinearLayout>