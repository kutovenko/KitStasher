<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llKitItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@color/colorBackground"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">


    <ImageView
        android:id="@+id/ivBoxartItem"
        android:layout_width="140dp"
        android:layout_height="86dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <LinearLayout
        android:id="@+id/llKitText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvKit_nameItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_weight="3"
            android:maxLines="3"
            android:text="@string/Kit_name"
            android:textAppearance="@style/AppTheme.LittleHeader" />

        <TextView
            android:id="@+id/tvBrandItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="2"
            android:text="@string/Brand"
            android:textAppearance="@style/TextTheme" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvItemCardScaleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:text="@string/_1"
                android:textAppearance="@style/TextTheme" />

            <TextView
                android:id="@+id/tvScaleItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:paddingRight="8dp"
                android:text="350"
                android:textAppearance="@style/TextTheme" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/ibDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="8dp"
        android:background="@drawable/button"
        android:tint="@color/colorAccent"
        app:srcCompat="@drawable/ic_delete_black_24dp" />

</LinearLayout>